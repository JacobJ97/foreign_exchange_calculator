BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        Label:
            size_hint: 1, 1
            text: 'Current trip location: '
            id: current_destination_label
    BoxLayout:
        Spinner:
            id: country_selection
            text: str(app.country_name_codes)
            values: app.country_name_codes

        TextInput:
            size_hint: 1, 1
            id: input_country_amount
            text: ''
            multiline: False
            on_text_validate: app.change_amount()
            on_text: app.clear_textinput()


    BoxLayout:
        Label:
            size_hint: 1, 1
            id: home_country_label
        TextInput:
            size_hint: 1, 1
            id: input_home_country_amount
            text: ''
            multiline: False
            on_text_validate: app.change_amount()
            on_text: app.clear_textinput()
    BoxLayout:
        Label:
            id: date
            text: 'Today is: '
    BoxLayout:
        Label:
            id: status
            text: ''
            size_hint: 1, 1
        Button:
            id: update
            text: 'update current currencies'
            on_press: app.update_currency()



